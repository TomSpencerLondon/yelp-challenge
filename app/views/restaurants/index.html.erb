<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col s2 offset-s5">
    <%= link_to raw('<i class="material-icons">add</i>'), new_restaurant_path, { :class=>"btn-floating btn-large waves-effect waves-light grey" } %>
  </div>
</div>

<% @restaurants.each do |restaurant| %>
  <div class="row">
    <div class="col s12 m6 l4 offset-m3 offset-l4">
      <div>
        <%= link_to restaurant.name, restaurant %>
      </div>
      <div>
        <%= restaurant.description %>
      </div>
      <div>
        <%= link_to 'Reviews', restaurant_reviews_path(restaurant) %>
      </div>
    </div>
  </div>
<% end %>
